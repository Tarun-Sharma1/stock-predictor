server {
    listen 80;
    server_name 127.0.0.1;  # Replace with your domain or IP address

    location /static/ {
        alias /home/tourist/Desktop/stock/stock-django/Stock-Prediction-System-Application/app/static;  # Replace with the absolute path to your Django static files directory
    }

    location / {
        proxy_pass http://127.0.0.1:8005;  # Assuming Gunicorn is running on localhost port 8000
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

